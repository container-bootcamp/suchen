{
  "name": "suchen-frontend",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "forever": "forever -w index.js",
    "build-css": "node-sass -o dist/ --output-style compressed --source-map true --source-map-contents src/client/styles/",
    "watch-css": "node-sass -w -r -o dist/ --source-map true --source-map-contents src/client/styles/",
    "watch": "$npm_execpath run watch-css",
    "build": "$npm_execpath run build-css",
    "dev": "$npm_execpath run watch & $npm_execpath run forever",
    "start": "node ."
  },
  "devDependencies": {
    "eslint": "^3.19.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-node": "^4.2.2",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "forever": "^0.15.3",
    "node-sass": "^4.5.3"
  },
  "dependencies": {
    "elasticsearch": "^13.3.1",
    "handlebars": "^4.0.8",
    "hapi": "^16.1.1",
    "inert": "^4.2.0",
    "jaeger-client": "^3.5.3",
    "normalize.css": "^7.0.0",
    "opentracing": "^0.14.1",
    "request": "^2.81.0",
    "sass-mq": "^3.3.2",
    "vision": "^4.1.1"
  }
}
